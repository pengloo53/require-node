<html>
<head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <h1><%= title %><small></small></h1>
            <p class="lead">
                <ol class="breadcrumb">
                    <li><a href="/" class="">首页</a></li>
                    <li class="active">添加需求</li>
                    <!--<li><a href="/admin" class="btn btn-info btn-xs pull-right">管理员登陆</a></li>-->
                </ol>
            </p>

            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                <form action="/add" method="post" role="form">
                    <div class="form-group">
                        <label for="title">需求名称</label>
                        <input type="text" name="title" class="form-control" placeholder="一句话描述你的问题">
                    </div>
                    <div class="form-group">
                        <label for="content">补充说明一下</label>
                        <textarea class="form-control" rows="3" name="content" placeholder="选填"></textarea>
                    </div>
                    <!--<div class="form-group">
                        <label for="dept">所在组织</label>
                        <select class="form-control" name="dept">
                            <% for(var i=0; i < depts.length; i++){ %>
                            <option><%= depts[i].deptname %></option>
                            <% } %>
                        </select>
                    </div>-->
                    <div class="form-group">
                        <label for="dept">所在部门</label>
                        <select class="form-control" name="dept">
                            <% for(var i=0; i < depts.length; i++){ %>
                            <option><%= depts[i].deptname %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-sm btn-default" name="reset">重置</button>
                        <button class="btn btn-lg btn-primary" name="submit" onclick="check()">提交</button>
                        <span class="label label-danger"><%= message %></span>
                    </div>
                </form>
            </div>
            <div class="col-lg-3">

            </div>
        </div>
    </div>
</body>
</html>