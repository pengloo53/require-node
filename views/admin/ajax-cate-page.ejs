<div class="col-lg-6">
    <p class="lead"></p>
    <table class="table table-striped">
        <thead>
        <tr class="text-center">
            <th class="text-center">#</th>
            <th class="text-center">分类</th>
            <th class="text-center">关键词</th>
            <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <form action="#">
            <tr class="text-center">
                <td>0</td>
                <td class="text-center">
                    <select name="category" id="" class="form-control text-center">
                        <option value="ERP">ERP</option>
                        <option value="IT">IT</option>
                    </select>
                </td>
                <td><input type="text" class="form-control text-center" name="keyname"></td>
                <td><button class="btn btn-success btn-sm"><span class="glyphicon glyphicon-plus"></span></button></td>
            </tr>
        </form>
        <% for(var i = 0 ; i < cates.length; i++){ %>
        <tr class="text-center">
            <td><%= i + 1 %></td>
            <td><%= cates[i].category %></td>
            <td><%= cates[i].keyname %></td>
            <td><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></button></td>
        </tr>
        <% } %>

        </tbody>
    </table>
</div>